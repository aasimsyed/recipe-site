generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
  engineType      = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  recipes       Recipe[]
  reviews       Review[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Recipe {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  description String
  content     Json
  ingredients Json
  cookTime    Int
  prepTime    Int
  servings    Int
  authorId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  rating      Float      @default(0)
  video       String?
  nutrition   Json?
  steps       Json
  media       Media[]
  author      User       @relation(fields: [authorId], references: [id])
  reviews     Review[]
  categories  Category[] @relation("CategoryToRecipe")

  @@index([title, description])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  publicId    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  recipes     Recipe[]

  @@index([slug])
}

model Media {
  id       String    @id @default(cuid())
  url      String
  type     MediaType
  recipeId String?
  publicId String
  recipe   Recipe?   @relation(fields: [recipeId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  rating    Float
  recipeId  String
  createdAt DateTime @default(now())
  comment   String?
  updatedAt DateTime @updatedAt
  userId    String
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, recipeId])
  @@index([recipeId])
}

enum Role {
  USER
  ADMIN
}

enum MediaType {
  IMAGE
  VIDEO
}
